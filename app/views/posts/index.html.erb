<div id="container">
	<div id="newPostContainer">
		<%= form_for(@post, url: posts_path, remote: true) do |f| %>
			<div id="newPostField">
				<%= f.text_area :text %>
			</div>
			<div id="newPostSubmit">
				<%= f.submit "Write post" %>
			</div>
		<% end %>
	</div>

	<div id="posts">
		<%= render @posts %>
	</div>
</div>
